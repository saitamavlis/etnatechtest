@using EtnaShop.Models
@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-pimary">Crear Producto</h2>
            <hr />
        </div>
       @* <div asp-validation-summary=All></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"/>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="2" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"/>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control"/>
            <span asp-validation-for="Price" class="text-danger"/>
        </div>
        <button type="submit" class="btn btn-primary" style="width:180px">Crear</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary"  style="width:180px">
            Volver
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}