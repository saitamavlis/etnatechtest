@using EtnaShop.Models
@model Product

<form method="post" asp-action="Delete">
    @*Para poder pasar el id al controller y poder borar el registro
    se utiliza ese input hidden*@
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-pimary">Borrar Producto</h2>
            <hr />
        </div>
       @* <div asp-validation-summary=All></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control"/>
            
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control"/>
            
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control"/>
            
        </div>
        <button type="submit" class="btn btn-primary" style="width:180px">Borrar</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary"  style="width:180px">
            Volver
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}