@using EtnaShop.Models
@model ShoppingCart

@{
    ViewData["Title"] = "Details";
}

<form method="post">
    <input hidden asp-for="ProductId" />
    <input hidden asp-for="OrderId" />
    <div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Count)
        </dt>
        <dd class="col-sm-2">
            <input asp-for="Count" class="form-control"  width="auto"/>
        </dd>
    </dl>
</div>
        <div>
    <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="width:180px">Agregar al carro</button> 
    <a asp-controller="ShoppingCart" asp-action="Index" class="btn btn-secondary" style="width:180px">
        Volver
    </a>
</div>

</form>